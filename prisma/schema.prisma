// Profile model
model Profile {
  id         String    @id @default(cuid())
  first_name String    @db.VarChar(255)
  last_name  String    @db.VarChar(255)
  full_name  String    @db.VarChar(255)
  city       String    @db.VarChar(255)
  state      String    @db.VarChar(255)
  languages  String    @db.VarChar(255)
  school     String    @db.VarChar(255)
  company    Company?  @relation(fields: [company_id], references: [company_id])
  company_id Int?      @db.Int
}

// Company model
model Company {
  company_id     Int      @id
  name           String   @db.VarChar(255)
  description    String?  @db.Text
  company_size   String?  @db.VarChar(255)
  country        String?  @db.VarChar(255)
  state          String?  @db.VarChar(255)
  city           String?  @db.VarChar(255)
  zip_code       String?  @db.VarChar(255)
  address        String?  @db.VarChar(255)
  url            String?  @db.VarChar(255)
  profiles       Profile[] // One-to-many relation with Profile
  jobs           Job[]     // One-to-many relation with Job
}

// Job model
model Job {
  id               Int      @id @default(autoincrement())
  job_id           String   @db.VarChar(255)
  company          Company  @relation(fields: [company_id], references: [company_id])
  company_id       Int
  title            String   @db.VarChar(255)
  description      String?  @db.Text
  location         String?  @db.VarChar(255)
  med_salary       Float?   @db.Float
  remote_allowed   Boolean? @db.TinyInt
  work_type        String?  @db.VarChar(255)
  application_url  String?  @db.Text
  expiry           String?  @db.VarChar(255)
}
